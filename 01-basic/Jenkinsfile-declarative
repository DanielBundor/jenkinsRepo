pipeline {
  agent any
  stages {
    stage('Welcome') {
      steps {
        sh 'echo "This is my declarative pipeline file"'
      }
    }

  stage('Declarative') {
      steps {
        sh 'echo "A declarative pipeline usually begins with "pipeline" as the first word in the code or file; thus, differentiating itself from that of a scripted pipeline file"'
      }
    }
 
   stage('Declarative Pipeline') {
      steps {
        sh 'echo "A declarative pipeline is a pipeline that adds a powerful set of automation tools onto Jenkins, supporting use cases that span from simple continuous integration to comprehensive continuous delivery pipelines"'
      }
    }

  }
}
